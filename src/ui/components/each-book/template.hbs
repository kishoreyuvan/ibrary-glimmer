<div class="col-md-4">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">{{@book.name}}</h3>
    </div>
    <div class="panel-body">
      <p>Year     : {{@book.year}}</p>
      <p>Author   : {{@book.author}}</p>
      <p>Available: <span class="badge">{{@book.count}}</span></p>
    </div>
    <div class="panel-footer">
      <button class="btn btn-xs btn-success" style="position: relative;margin-left:85%" onclick={{action @assignbook @book}} disabled={{empty}}>Book</button>
    </div>
  </div>
</div>
